---
export interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
}

const {
  title = 'Tiller â€” Steer your AI coding sessions',
  description = 'Tiller scaffolds Claude Code projects with a structured vibe loop: orient, confirm, build, save. One command to get a production-ready AI coding workflow.',
  ogImage = '/tiller-ai/og-image.png',
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />

    <!-- Canonical -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/tiller-ai/favicon.svg" />

    <!-- Fonts -->
    <link rel="preload" href="/tiller-ai/fonts/PlayfairDisplay-Regular.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/tiller-ai/fonts/PlayfairDisplay-Bold.woff2" as="font" type="font/woff2" crossorigin />

    <title>{title}</title>

    <style is:global>
      @font-face {
        font-family: 'Playfair Display';
        src: url('/tiller-ai/fonts/PlayfairDisplay-Regular.woff2') format('woff2');
        font-weight: 400;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: 'Playfair Display';
        src: url('/tiller-ai/fonts/PlayfairDisplay-Bold.woff2') format('woff2');
        font-weight: 700;
        font-style: normal;
        font-display: swap;
      }
    </style>
  </head>
  <body>
    <slot />
  </body>
</html>
